{
  "manifest_version": 2,
  "name": "txAdmin Tool",
  "version": "1.0",

  "description": "Extension that helps txAdmin web users",

  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },

  "permissions": ["notifications"],

  "background": {
    "scripts": ["txtool_background.js"]
  },

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "txAdmin Tool",
    "default_popup": "popup/txtool.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["txtool_front.js"]
    }
  ]
}
